<UserControl x:Class="AssistPurchaseFrontend.QuestionBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AssistPurchaseFrontend"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="borderforbubble" CornerRadius="10, 10, 10, 10" BorderBrush="#0474ac" BorderThickness="8,8,8,0" Background="DarkBlue">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" x:Name="Choice_Question" Background="Transparent" Foreground="White" FontSize="20" FontWeight="Bold" TextAlignment="Left"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal" x:Name="ChoiceOptions" Background="Transparent" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        </Grid>
    </Border>
</UserControl>
