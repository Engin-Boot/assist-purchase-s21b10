<Window x:Class="AssistPurchaseFrontend.CustomerServices"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AssistPurchaseFrontend"
        mc:Ignorable="d"
        Title="CustomerServices" Height="450" Width="800" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid Background="#0474ac">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="120"></RowDefinition>
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <StackPanel x:Name="panelForQuestion" Orientation="Vertical" Grid.Row="0"></StackPanel>
        </ScrollViewer>
        <Button x:Name="PreviousBtn" Content="Previous" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Click="PreviousButton_Click"  Style="{StaticResource ResourceKey=ButtonStyle}"/>
        <Button x:Name="NextBtn" Content="Next" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Click="NextButton_Click"  Style="{StaticResource ResourceKey=ButtonStyle}"/>
    </Grid>
</Window>
